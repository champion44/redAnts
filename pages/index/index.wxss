/**index.wxss**/
.mainPic {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.logo{
  width: 150px;
  height: 150px;
}
.searchUnion{
      display: inline-flex;  
}
.searchUnion:active{
  transform: scale(0.9)
}
.search-img{
  position: absolute; 
  margin: 37px 0 0 90px;
  z-index: 99;
}
.search-logo{
  position: absolute; 
  width: 30px;
  height: 30px;
  margin: 30px 0 0 10px;
  z-index: 99;
}
.input {
  font-family:"Times New Roman",Georgia,Serif;
  background: white;
  border-radius: 15px;
  text-align: center;
  color: gray;
  border:1px solid #ea986c;
  width: 300px;
  margin-right: 10px;
  line-height: 38px;
  margin-top: 25px;
  /* z-index: -1; */
}

.liner {
  margin-top: 20px;
  text-align: center;
  color: gray;
  margin-bottom: 20px;
  clear: both;
}
.template{
    display: inline-flex;  
    position: positive;
    width: 33%;
}
.innerTemplate{
  padding:0 0px 10px 20px;
}
 .template image{
   width: 80px;
   height: 80px;
} 

.template p{
  color: #ea986c;
  display: flex;
  text-align: center;
   flex-direction: column; 
}
image:active{
  transform: scale(0.9);
}